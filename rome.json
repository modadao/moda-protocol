{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"files": {
		"ignore": [
		  "**/node_modules", ".next", "public", "dist", "**/*.json", "*.yaml", ".vscode"
		]
	  },
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentSize": 2,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			  }
		}
	},
	"javascript": {
		"formatter": {
		  "quoteStyle": "single",
		  "trailingComma": "all",
		  "semicolons": "always"
		}
	  }
}
