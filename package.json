{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "pnpm --filter moda-sdk build",
    "dev": "pnpm --filter moda-sdk watch",
    "contracts:docs": "pnpm --filter moda-contracts contracts:docs",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply-unsafe",
    "lint:ci": "biome ci .",
    "update": "pnpm update --latest --recursive --interactive",
    "generate:profile": "pnpm --filter profile run build",
    "evm-profile:dev": "pnpm --filter evm-profile run dev"
  },
  "dependencies": {
    "@wagmi/cli": "^2.1.0",
    "viem": "^2.7.1",
    "@wagmi/chains": "^1.8.0",
    "@wagmi/core": "^2.6.3",
    "@wagmi/connectors": "^4.1.12",
    "wagmi": "^2.5.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3"
  },
  "packageManager": "pnpm@8.10.1"
}
